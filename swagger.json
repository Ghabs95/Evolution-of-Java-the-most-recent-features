{
  "swagger" : "2.0",
  "info" : {
    "title" : "Cirfood Payment Gateway",
    "description" : "Payment Gateway Cirfood",
    "version" : "1.0.0"
  },
  "tags" : [ {
    "name" : "App Services"
  }, {
    "name" : "Merchant Services"
  } ],
  "paths" : {
    "/payment-instruments" : {
      "get" : {
        "tags" : [ "App Services" ],
        "summary" : "Return a list of instruments",
        "description" : "This service returns a list of instruments saved in MS DB with their details. The service retrieves these informations with userId found in JWT",
        "produces" : [ "application/json" ],
        "responses" : {
          "200" : {
            "description" : "Successfully returned a list of instruments",
            "schema" : {
              "allOf" : [ {
                "$ref" : "#/definitions/StandardResponse"
              }, {
                "$ref" : "#/definitions/Instruments"
              } ]
            }
          }
        }
      }
    },
    "/payment-instruments/{paymentInstrumentId}" : {
      "delete" : {
        "tags" : [ "App Services" ],
        "summary" : "Delete a token by instrumentId",
        "description" : "This service deletes a token saved in MS DB by its related instrumentId. The service retrieves this information as path parameter",
        "parameters" : [ {
          "name" : "paymentInstrumentId",
          "in" : "path",
          "description" : "InstrumentId referred to the instrument to delete",
          "type" : "string",
          "default" : "fc183df4-b92f-4656-85ad-e1910d6247a4",
          "required" : true
        } ],
        "responses" : {
          "200" : {
            "description" : "Successfully deleted the instrument selected",
            "schema" : {
              "$ref" : "#/definitions/StandardResponse"
            }
          }
        }
      }
    },
    "/payments" : {
      "post" : {
        "tags" : [ "App Services" ],
        "summary" : "Start payment",
        "description" : "This service starts a card payment. If the parameter paymentInstrumentId is passed in requestBody the payment will use the related token",
        "consumes" : [ "application/json" ],
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "in" : "body",
          "name" : "requestBody",
          "description" : "The parameters received by the startPayment method",
          "schema" : {
            "$ref" : "#/definitions/StartPaymentRequest"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Successfully executed the requested payment",
            "schema" : {
              "allOf" : [ {
                "$ref" : "#/definitions/StandardResponse"
              }, {
                "$ref" : "#/definitions/StartPaymentResponse"
              } ]
            }
          }
        }
      },
      "get" : {
        "tags" : [ "App Services" ],
        "summary" : "Read status of one or more payments",
        "description" : "This service returns the status of one or more payments. The request parameters are used to filter the research",
        "parameters" : [ {
          "$ref" : "#/parameters/dateFromParam"
        }, {
          "$ref" : "#/parameters/dateToParam"
        }, {
          "$ref" : "#/parameters/amountMinParam"
        }, {
          "$ref" : "#/parameters/amountMaxParam"
        }, {
          "$ref" : "#/parameters/resultParam"
        }, {
          "$ref" : "#/parameters/operationIdParam"
        } ],
        "responses" : {
          "200" : {
            "description" : "Successfully executed the requested payment",
            "schema" : {
              "allOf" : [ {
                "$ref" : "#/definitions/StandardResponse"
              }, {
                "$ref" : "#/definitions/PaymentsStatus"
              } ]
            }
          }
        }
      }
    },
    "/confirm-payment" : {
      "post" : {
        "tags" : [ "Merchant Services" ],
        "summary" : "Confirm payment",
        "description" : "This service confirms a deferred payment. The parameter paymentId passed in requestBody indicates the payment to confirm",
        "consumes" : [ "application/json" ],
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "in" : "body",
          "name" : "requestBody",
          "description" : "The parameter to retrieve the payment",
          "schema" : {
            "required" : [ "paymentId" ],
            "properties" : {
              "paymentId" : {
                "type" : "string",
                "description" : "Id related to the payment",
                "example" : "2a4c0d68-1bb8-414e-b415-fcc6987c6b53"
              }
            }
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Successfully confirmed the selected payment",
            "schema" : {
              "$ref" : "#/definitions/StandardResponse"
            }
          }
        }
      }
    },
    "/refund-payment" : {
      "post" : {
        "tags" : [ "Merchant Services" ],
        "summary" : "Refund payment",
        "description" : "This service cancels or refunds a payment. The parameter paymentId passed in requestBody indicates the payment to cancel or refund",
        "consumes" : [ "application/json" ],
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "in" : "body",
          "name" : "requestBody",
          "description" : "The parameter to retrieve the payment",
          "schema" : {
            "required" : [ "paymentId" ],
            "properties" : {
              "paymentId" : {
                "type" : "string",
                "description" : "Id related to the payment",
                "example" : "2a4c0d68-1bb8-414e-b415-fcc6987c6b53"
              }
            }
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Successfully cancelled or refunded the selected payment",
            "schema" : {
              "$ref" : "#/definitions/StandardResponse"
            }
          }
        }
      }
    },
    "/report" : {
      "post" : {
        "tags" : [ "Merchant Services" ],
        "summary" : "Daily report",
        "description" : "This service returns the daily report. The requestBody parameters are used to filter the research",
        "consumes" : [ "application/json" ],
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "in" : "body",
          "name" : "requestBody",
          "description" : "The parameters are filters for the research",
          "schema" : {
            "$ref" : "#/definitions/DailyReport"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Successfully retrieved the daily report",
            "schema" : {
              "allOf" : [ {
                "$ref" : "#/definitions/StandardResponse"
              }, {
                "$ref" : "#/definitions/Transactions"
              } ]
            }
          }
        }
      }
    },
    "/tokenize" : {
      "get" : {
        "tags" : [ "Merchant Services" ],
        "summary" : "Read status of one or more payments",
        "description" : "This service returns the status of one or more payments. The request parameters are used to filter the research",
        "parameters" : [ {
          "$ref" : "#/parameters/orderId"
        }, {
          "$ref" : "#/parameters/shopId"
        }, {
          "$ref" : "#/parameters/authNumber"
        }, {
          "$ref" : "#/parameters/amount"
        }, {
          "$ref" : "#/parameters/currency"
        }, {
          "$ref" : "#/parameters/exponent"
        }, {
          "$ref" : "#/parameters/transactionId"
        }, {
          "$ref" : "#/parameters/result"
        }, {
          "$ref" : "#/parameters/authorMode"
        }, {
          "$ref" : "#/parameters/accountingMode"
        }, {
          "$ref" : "#/parameters/network"
        }, {
          "$ref" : "#/parameters/transactionType"
        }, {
          "$ref" : "#/parameters/issuerCountry"
        }, {
          "$ref" : "#/parameters/payerId"
        }, {
          "$ref" : "#/parameters/payer"
        }, {
          "$ref" : "#/parameters/payerStatus"
        }, {
          "$ref" : "#/parameters/hashPan"
        }, {
          "$ref" : "#/parameters/iban"
        }, {
          "$ref" : "#/parameters/accountHolder"
        }, {
          "$ref" : "#/parameters/aliasStr"
        }, {
          "$ref" : "#/parameters/panTail"
        }, {
          "$ref" : "#/parameters/panExpiryDate"
        }, {
          "$ref" : "#/parameters/panAlias"
        }, {
          "$ref" : "#/parameters/panAliasRev"
        }, {
          "$ref" : "#/parameters/panAliasExpDate"
        }, {
          "$ref" : "#/parameters/panAliasTail"
        }, {
          "$ref" : "#/parameters/maskedPan"
        }, {
          "$ref" : "#/parameters/acquirerBin"
        }, {
          "$ref" : "#/parameters/merchantId"
        }, {
          "$ref" : "#/parameters/cardType"
        }, {
          "$ref" : "#/parameters/mac"
        } ],
        "responses" : {
          "200" : {
            "description" : "Successfully executed the requested payment",
            "schema" : {
              "$ref" : "#/definitions/StandardResponse"
            }
          }
        }
      }
    }
  },
  "definitions" : {
    "StandardResponse" : {
      "required" : [ "code", "message" ],
      "type" : "object",
      "properties" : {
        "code" : {
          "type" : "string",
          "example" : "0000"
        },
        "message" : {
          "type" : "string",
          "example" : "OK"
        }
      }
    },
    "StartPaymentRequest" : {
      "required" : [ "operationId", "amount", "currency", "accountingMode" ],
      "type" : "object",
      "properties" : {
        "operationId" : {
          "type" : "string",
          "description" : "Shopping cart number",
          "example" : "002967566981"
        },
        "paymentInstrumentId" : {
          "type" : "string",
          "description" : "Payment method id",
          "example" : "fc183df4-b92f-4656-85ad-e1910d6247a4"
        },
        "amount" : {
          "type" : "string",
          "description" : "Transaction amount",
          "example" : "20.10"
        },
        "currency" : {
          "type" : "string",
          "description" : "Currency used for transaction",
          "example" : "EUR"
        },
        "accountingMode" : {
          "type" : "string",
          "description" : "Accounting mode",
          "enum" : [ "I", "D" ],
          "example" : "I"
        }
      }
    },
    "StartPaymentResponse" : {
      "type" : "object",
      "properties" : {
        "transactionId" : {
          "type" : "string",
          "description" : "Transaction id",
          "example" : "66efd7c6-62cf-4351-930d-d9d5c28c7090"
        },
        "amount" : {
          "type" : "string",
          "description" : "Transaction amount",
          "example" : "20.10"
        },
        "tax" : {
          "type" : "string",
          "description" : "Transaction tax",
          "example" : "0.00"
        },
        "fee" : {
          "type" : "string",
          "description" : "Transaction fee",
          "example" : "0.0"
        },
        "transactionMessage" : {
          "type" : "string",
          "description" : "Transaction message",
          "example" : "Stai autorizzando un pagamento di 20,10 Euro"
        },
        "addPaymentInstrumentUrl" : {
          "type" : "string",
          "description" : "Redirect @Pos URL",
          "example" : "http://localhost:8080/example/redirect.html"
        }
      }
    },
    "DailyReport" : {
      "type" : "object",
      "properties" : {
        "date" : {
          "type" : "string",
          "description" : "The date of today",
          "example" : "06/11/2019"
        },
        "userId" : {
          "type" : "string",
          "description" : "User id",
          "example" : "gG0i1a2m3p4i5e6r7o"
        },
        "shopId" : {
          "type" : "string",
          "description" : "Shop id",
          "example" : "66efd7c6"
        },
        "terminalId" : {
          "type" : "string",
          "description" : "Terminal id",
          "example" : "8001245351"
        },
        "operationId" : {
          "type" : "string",
          "description" : "Shopping cart number",
          "example" : "002967566981"
        }
      }
    },
    "Instruments" : {
      "type" : "object",
      "properties" : {
        "instruments" : {
          "type" : "array",
          "items" : {
            "$ref" : "#/definitions/Instrument"
          }
        }
      }
    },
    "Instrument" : {
      "required" : [ "idInstrument", "aliasPan", "obscuredPan", "expiryDate", "circuit" ],
      "type" : "object",
      "properties" : {
        "idInstrument" : {
          "type" : "string",
          "description" : "Card id",
          "example" : "80eebc00-f5ee-45e1-b910-0c8c62199c84"
        },
        "aliasPan" : {
          "type" : "string",
          "description" : "Generated token during card storage",
          "example" : "0000462387756794467"
        },
        "obscuredPan" : {
          "type" : "string",
          "description" : "Obscured pan",
          "example" : "534223xxxxxx1234"
        },
        "expiryDate" : {
          "type" : "string",
          "description" : "Expiry date",
          "example" : "2112"
        },
        "circuit" : {
          "type" : "string",
          "description" : "Circuit",
          "example" : "02"
        }
      }
    },
    "Transactions" : {
      "type" : "object",
      "properties" : {
        "transactions" : {
          "type" : "array",
          "items" : {
            "$ref" : "#/definitions/Transaction"
          }
        }
      }
    },
    "Transaction" : {
      "required" : [ "transactionId", "amount", "transactionType", "date", "userId", "shopId", "terminalId", "operationId" ],
      "allOf" : [ {
        "type" : "object",
        "properties" : {
          "transactionId" : {
            "type" : "string",
            "description" : "Transaction id",
            "example" : "sd4ds4fav"
          },
          "amount" : {
            "type" : "string",
            "description" : "Transaction amount",
            "example" : "20.10"
          },
          "transactionType" : {
            "type" : "string",
            "description" : "The type of transaction",
            "example" : "Acquisto"
          }
        }
      }, {
        "$ref" : "#/definitions/DailyReport"
      } ]
    },
    "PaymentsStatus" : {
      "type" : "object",
      "properties" : {
        "paymentsStatus" : {
          "type" : "array",
          "items" : {
            "$ref" : "#/definitions/PaymentStatus"
          }
        }
      }
    },
    "PaymentStatus" : {
      "type" : "object",
      "properties" : {
        "paymentId" : {
          "type" : "string",
          "description" : "Transaction id",
          "example" : "sd4ds4fav"
        },
        "status" : {
          "type" : "string",
          "description" : "Transaction status",
          "example" : "Waiting"
        }
      }
    }
  },
  "parameters" : {
    "dateFromParam" : {
      "name" : "dateFrom",
      "in" : "query",
